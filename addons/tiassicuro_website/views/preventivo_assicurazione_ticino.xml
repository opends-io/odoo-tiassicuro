<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="tiassicuro_website.preventivo_assicurazione_ticino" name="Preventivo Assicurazione Ticino">
        <t t-call="website.layout">
            <div class="hero-inner4">
                <div class="inner-wrap4">
                </div>
                <div class="container padding-section" style="position: relative;z-index: 2;">
                    <div class="row justify-content-center justify-content-lg-end">
                        <div class="col-12 col-lg-6">
                            <h1>TiAssicuro..<br/>
                                un futuro più sereno!</h1>
                            <h4 style="text-align: left;">La tua assicurazione nel Canton Ticino in
                                Svizzera</h4>
                            <div class="">La felicità non si compra − non c’è nulla di più vero! È
                                possibile, però, regalare un po’ di tranquillità a se stessi e ai propri
                                cari scegliendo i prodotti consigliati da TiAssicuro.
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="wpb_wrapper container padding-section">
                <h2 style="text-align: center;">Preventivo!</h2>
                <div class="" style="text-align: center;">Richiedi un preventivo, una
                    consulenza o un semplice contatto con un nostro consulente, cercheremo
                    di rispondere nel minor tempo possibile ad ogni vostra domanda.
                </div>
            </div>

            <div class="container padding-section" style="padding-top: 0 !important;">
                <form action="/preventivo-assicurazione-ticino-svizzera" method="POST">
                    <p>
                        <input class="form-control" type="text" maxlength="40" minlength="3" required="" name="yourName"
                               placeholder="Nome e Cognome" data-error="name-error"/>
                    </p>
                    <div class="error-message" id="name-error" style="display: none;"></div>
                    <p>
                        <input class="form-control" type="email" name="yourEmail" placeholder="Indirizzo E-mail"
                               required="" data-error="email-error"/>
                    </p>
                    <div class="error-message" id="email-error" style="display: none;"></div>
                    <p>
                        <input class="form-control" type="tel" name="yourTelefono" placeholder="Telefono"
                               data-error="phone-error"/>
                    </p>
                    <div class="error-message" id="phone-error" style="display: none;"></div>
                    <p>Scegli un prodotto</p>
                    <p>
                        <div class="fancy-select-wrap">
                            <div class="select2-container" id="s2id_autogen1" style="width: 100%;">
                                <a href="javascript:void(0)" class="select2-choice" tabindex="-1">
                                    <span class="select2-chosen" id="select2-chosen-2"> ---</span>
                                    <abbr class="select2-search-choice-close"></abbr>
                                    <span class="select2-arrow" role="presentation">
                                        <b role="presentation"></b>
                                    </span>
                                </a>
                                <label for="s2id_autogen2" class="select2-offscreen"></label>
                                <input class="select2-focusser select2-offscreen" type="text" aria-haspopup="true"
                                       role="button" aria-labelledby="select2-chosen-2" id="s2id_autogen2"/>
                            </div>
                            <select name="optionName" required="" aria-invalid="false" data-error="optionName-error"
                                    tabindex="-1" title="" style="display: none;">
                                <option value=""> ---</option>
                                <option value="Responsabilità Civile Privata">Responsabilità Civile Privata</option>
                                <option value="Economia Domestica Assicurazione Viaggi">Economia Domestica Assicurazione
                                    Viaggi</option>
                                <option value="Protezione Giuridica">Protezione Giuridica</option>
                                <option value="Assicurazione Auto">Assicurazione Auto</option>
                                <option value="Cassa Malati">Cassa Malati</option>
                                <option value="Terzo Pilastro">Terzo Pilastro</option>
                                <option value="Ipoteca">Ipoteca</option>
                                <option value="Rendita Vitalizia">Rendita Vitalizia</option>
                                <option value="altro..">altro..</option>
                            </select>
                        </div>
                    </p>
                    <div class="error-message" id="optionName-error" style="display: none;"></div>
                    <p>
                        <textarea class="form-control" name="yourMessage" rows="10"
                                  placeholder="Richiesta o specificare altro..."
                                  required="" data-error="message-error">
                        </textarea>
                    </p>
                    <div class="error-message" id="message-error" style="display: none;"></div>
                    <div class="my-3">
                        <div class="email_message"></div>
                    </div>
                    <p style="padding-bottom: 0;display: flex;margin-top: 50px;">
                        <button type="submit" class="invalid-button" disabled=""
                                style="border-radius: 200px !important;padding: 15px 22px !important;box-shadow: none;font-size: 12px;">
                            Invia la Richiesta</button>
                    </p>
                </form>
            </div>
        </t>
    </template>
</odoo>